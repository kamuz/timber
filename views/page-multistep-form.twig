{% extends "base.twig" %}
{% block content %}
<div class="content">
	<h1>
		<h1 class="article-h1">{{post.title}}</h1>
	</h1>
	<form action="">
		<div class="accordion">
			<div class="accordion-item step-1 active">
				<div class="accordion-header">
					<h4>{{ options.step_1_title }}</h4>
				</div>
				<div class="accordion-content">
					<p>{{ options.step_1_subtitle }}</p>
					<div class="form-items">
						{% if options.step_1_radio_buttons %}
						{% for item in options.step_1_radio_buttons %}
						{% set id = 'step-1-radio-' ~ loop.index %}
						<div class="radio-item">
							<label for="{{ id }}">
								{% if item.image %}
								<img src="{{ item.image.url }}" alt="{{ item.image.alt ?? item.title }}">
								{% endif %}
								<input type="radio" name="{{ options.step_1_title }}" value="{{ item.title }}" id="{{ id }}">
								<span>{{ item.title }}</span>
							</label>
						</div>
						{% endfor %}
						{% endif %}
					</div>
					<button class="next-btn">{{ options.step_1_button_text }}</button>
				</div>
			</div>
			<div class="accordion-item step-2">
				<div class="accordion-header">
					<h4>{{ options.step_2_title }}</h4>
				</div>
				<div class="accordion-content">
					<div class="form-items">
						{% if options.step_2_radio_buttons %}
						{% for item in options.step_2_radio_buttons %}
						{% set id = 'step-2-radio-' ~ loop.index %}
						<div class="radio-item">
							<label>
								<input type="radio" name="{{ options.step_2_title }}" value="{{ item.title }}" id="{{ id }}">
								<span class="item-title">{{ item.title }}</span>
								<p>Video Type: <span>{{ item.video_type }}</span></p>
								<p>Duration: <span>{{ item.duration }}</span></p>
							</label>
						</div>
						{% endfor %}
						{% endif %}
					</div>
					<button class="next-btn">{{ options.step_2_button_text }}</button>
				</div>
			</div>
			<div class="accordion-item step-3">
				<div class="accordion-header">
					<h4>{{ options.step_3_title }}</h4>
					<p>{{ options.step_3_subtitle }}</p>
				</div>
				<div class="accordion-content">
					<div class="form-items">
						{% if options.step_3_radio_buttons %}
						{% for item in options.step_3_radio_buttons %}
						{% set id = 'step-3-radio-' ~ loop.index %}
						<div class="radio-item">
							<label for="{{ id }}">
								{% if item.image %}
								<img src="{{ item.image.url }}" alt="{{ item.image.alt ?? item.title }}">
								{% endif %}
								<input type="radio" name="{{ options.step_3_title }}" value="{{ item.title}} - {{ item.subtitle }}" id="{{ id }}">
								<span class="item-title">{{ item.title }}</span>
								<p>{{ item.subtitle }}</p>
							</label>
						</div>
						{% endfor %}
						{% endif %}
					</div>
					<button class="next-btn">{{ options.step_1_button_text }}</button>
				</div>
			</div>
			<div class="accordion-item step-4">
				<div class="accordion-header">
					<h4>{{ options.step_4_title }}</h4>
				</div>
				<div class="accordion-content">
					<div class="decription">{{ options.step_4_description }}</div>
					<div class="form-items">
						{% if options.step_4_radio_buttons %}
						{% for item in options.step_4_radio_buttons %}
						{% set id = 'step-4-radio-' ~ loop.index %}
						<div class="radio-item">
							<label>
								<input type="radio" name="{{ options.step_4_title }}" value="{{ item.title }}" id="{{ id }}">
								<span class="item-title">{{ item.title }}</span>
							</label>
						</div>
						{% endfor %}
						{% endif %}
					</div>
					<button class="next-btn">{{ options.step_4_button_text }}</button>
				</div>
			</div>
			<div class="accordion-item step-5">
				<div class="accordion-header">
					<h4>{{ options.step_5_title }}</h4>
				</div>
				<div class="accordion-content">
					<div class="decription">{{ options.step_5_description }}</div>
					<div class="form-items">
						{% if options.step_5_radio_buttons %}
						{% for item in options.step_5_radio_buttons %}
						{% set id = 'step-5-radio-' ~ loop.index %}
						<div class="radio-item">
							<label>
								<input type="radio" name="{{ options.step_5_title }}" value="{{ item.title }}" id="{{ id }}">
								<span class="item-title">{{ item.title }}</span>
							</label>
						</div>
						{% endfor %}
						{% endif %}
					</div>
					<button class="next-btn">{{ options.step_5_button_text }}</button>
				</div>
			</div>
			<div class="accordion-item step-6">
				<div class="accordion-header">
					<h4>{{ options.step_6_title }}</h4>
				</div>
				<div class="accordion-content">
					<div class="decription">{{ options.step_6_description }}</div>
					<div class="form-items">
						<div class="field-group">
							<input type="text" id="name" name="{{ step_6_name_label }}" required class="user-invalid">
							<label for="name">Name</label>
						</div>
						<div class="field-group">
							<input type="email" id="email" name="{{ step_6_email_label }}" required class="user-invalid">
							<label for="email">Email</label>
						</div>
					</div>
					<button type="submit" class="open-btn-gnrl obtn obtn--grey flex flex--center highlight">{{ options.step_6_button_text }}<span class="arrow">
							<svg width="8" height="8" viewBox="0 0 8 8" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M7.5 0.999999C7.5 0.723857 7.27614 0.5 7 0.499999L2.5 0.5C2.22386 0.5 2 0.723857 2 1C2 1.27614 2.22386 1.5 2.5 1.5L6.5 1.5L6.5 5.5C6.5 5.77614 6.72386 6 7 6C7.27614 6 7.5 5.77614 7.5 5.5L7.5 0.999999ZM1.35355 7.35355L7.35355 1.35355L6.64645 0.646446L0.646447 6.64645L1.35355 7.35355Z" fill="white"></path>
							</svg>
						</span></button>
				</div>
			</div>
		</div>
		<div class="form-success-message alert alert-success alert-dismissible fade show" role="alert" style="display: none;">
			<h2>Thank you! The form has been successfully submitted.</h2>
			<p>We will contact you shortly.</p>
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</form>
</div>
{% endblock %}